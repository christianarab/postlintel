<h6> Edit your organization </h6>
<%= form_with(model: @event, method: :patch) do |f| %>
 <div>
    <%= f.label :title, class: "label" %>
    <%= f.text_field :title, class: "input form-control", autofocus: true %>
    <br>  
    <%= f.label :description, class: "label" %>
    <%= f.text_field :description, class: "input form-control", autofocus: true %>
    <br>  
    <%= f.label :location, class: "label" %>
    <%= f.text_field :location, class: "input form-control", autofocus: true %>
    <br>  
    <%= f.label :start_date_time, class: "label" %>
    <br>
    <%= f.datetime_select :start_date_time, type: "date", class: "input form-control" %>
    <br>  
    <%= f.label :end_date_time, class: "label" %>
    <br>
    <%= f.datetime_select :end_date_time, type: "date", class: "input form-control" %>
    <br>  
    <%= f.hidden_field :event_id, :value => @event.id %>
    <br>  
    <%= f.submit "Update Event", class: "btn btn-primary" %>
    <br> 
<% end %>
</div>

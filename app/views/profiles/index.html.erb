<h1 class="display-3">Profiles on Post Lintel</h1>
<br>
<br>
<div class="container">
    <% @profiles.each do | profile | %>
    <div class="card" style="width: 18rem;">
        <div class="card-body">
            <div class="image"><%= image_tag profile.user.profile_thumbnail, class: "rounded", width: "155" if profile.user.profile_thumbnail %></div>
            <h5 class="card-title"><%= profile.user.email %></h5>
            <p class="card-text"><%= profile.tagline %></p>
            <%= link_to "Profile", profile, class: "btn btn-primary" %>
        </div>
    </div>
    <br>
    <% end %>
</div>

